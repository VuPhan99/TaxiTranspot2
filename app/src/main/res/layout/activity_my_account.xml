<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.MyAccount">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_myaccount_back"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="25dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_back"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_myaccount_save"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="Save"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="90dp"
            android:layout_height="70dp"
            app:civ_border_color="@color/quantum_orange600"
            android:src="@drawable/ic_default_user"/>
        <TextView
            android:id="@+id/txt_myaccount_name"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text=""/>

    </LinearLayout>
    <LinearLayout
        android:layout_height="250dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="18dp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/edt_myaccount_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint=""
                android:focusable="true"
                android:focusableInTouchMode="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone number"
                android:textSize="18dp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/edt_myaccount_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint=""
                android:focusable="true"
                android:focusableInTouchMode="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email address"
                android:textSize="18dp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/edt_myaccount_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint=""
                android:focusable="true"
                android:focusableInTouchMode="true"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center">
        <TextView
            android:id="@+id/txt_myaccount_notifications"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textAllCaps="true"
            />
        <ImageView
            android:id="@+id/img_myaccount_notifications"
            android:layout_marginLeft="8dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_myaccount_google_account_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_cornor_side_border"
            android:text="Gỡ liên kết với Google"
            android:textSize="16sp"
            android:textColor="@color/quantum_grey600"
            android:drawableLeft="@drawable/ic_google_drawableleft"
            android:stateListAnimator="@null"
            />

        <Button
            android:id="@+id/btn_myaccount_logout"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="Log out"
            android:textSize="16sp"
            android:textColor="@color/quantum_orange600"/>
    </LinearLayout>
</LinearLayout>